# Create database and insert quotes
conn = sqlite3.connect("nice_nasty.db")
cursor = conn.cursor()

cursor.execute("""
CREATE TABLE IF NOT EXISTS quotes (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    text TEXT NOT NULL
)
""")

cursor.executemany("INSERT INTO quotes (text) VALUES (?)", [(q,) for q in quotes])

conn.commit()
conn.close()

print("Database created and populated successfully!")
